<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection</title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-900 text-yellow-500">
    <%- include('partials/navbar', { page: "/" }) %>

    <!-- Hero Section -->
    <div class="bg-yellow-500 text-gray-900 text-center py-20 px-4">
        <div class="max-w-3xl mx-auto">
            <h1 class="text-5xl font-extrabold mb-4">Welcome to the Lego Collection!</h1>
            <p class="text-2xl font-medium mb-6">
                Unleash your inner builder and embark on a journey through the colorful world of Lego.
            </p>
            <a href="/lego/sets" class="bg-gray-900 text-yellow-500 px-8 py-3 rounded-lg font-semibold hover:bg-yellow-600 transition-colors">
                Get Started Now
            </a>
        </div>
    </div>

    <!-- Featured Sets Section -->
    <div class="featured-sets container mx-auto px-4 py-12 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% featuredSets.forEach(set => { %>
            <div class="card bg-gray-800 shadow-lg rounded-lg overflow-hidden transition-transform transform hover:scale-105">
                <img src="<%= set.img_url %>" alt="<%= set.name %>" class="w-full h-56 object-cover border-b-4 border-yellow-500">
                <div class="card-content p-6 text-yellow-500">
                    <h2 class="text-xl font-semibold mb-2"><%= set.name %></h2>
                    <p class="text-yellow-400 mb-4"><%= set.description || "Explore this amazing set!" %></p>
                    <a href="/lego/sets/<%= set.set_num %>" class="inline-block bg-yellow-500 text-gray-900 px-4 py-2 rounded hover:bg-yellow-600">
                        View
                    </a>
                </div>
            </div>
        <% }); %>
    </div>

</body>
</html>